NAME = fil_di_ferro

COMPILE = clang -c

LINK = clang -Wall -Wextra -Werror

SRCS = main.c init_remove.c check_config.c utils.c take_line.c lst.c

OBJS =	$(SRCS:.c=.o)

all: $(NAME)

$(NAME): fil_di_ferro.h utils.h $(OBJS)
	$(LINK) $(OBJS) -o $(NAME)

%.o: %.c fil_di_ferro.h utils.h
	$(COMPILE) $< -o $@

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all
